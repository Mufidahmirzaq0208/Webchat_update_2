<h1>Real Time Chat</h1>

<div class="card" style="background : linear-gradient(to right, rgb(0, 0, 255) 0%, #330133 100%);
border-radius : 20px">
  <div class="card-body chat-container">
    <div id="message_holder" style="line-height: 23px;">
    </div>
  </div>
  <div class="row">
    <%= form_for @message, remote: true do |f| %>
      <div class="row form-group">
      <div class="d-flex p-2">
        <div class="ml-4 col-10">
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <div class="ml-4 col col-lg-3">
          <%= f.submit "Send", class: 'btn btn-primary', style: 'padding-right : 20px; padding-left : 20px' %> 
        </div>
      </div>
      </div>
    <% end %>
  </div>
  
</div>






